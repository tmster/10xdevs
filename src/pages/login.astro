---
import AuthLayout from "../layouts/AuthLayout.astro";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Alert, AlertDescription } from "@/components/ui/alert";

// Handle form submission directly on the server
let error: string | null = null;

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    // Validate inputs
    if (!email || !password) {
      error = "Email and password are required";
    } else {
      // Try to sign in
      const { data, error: authError } = await Astro.locals.supabase.auth.signInWithPassword({
        email,
        password,
      });

      if (authError) {
        error = authError.message;
      } else {
        // Successfully logged in, redirect
        return Astro.redirect('/flashcards/list');
      }
    }
  } catch (e) {
    console.error("Login error:", e);
    error = "An unexpected error occurred";
  }
}
---

<AuthLayout title="Sign in to your account">
  <Fragment slot="heading">Sign in to your account</Fragment>
  <Fragment slot="subheading">
    Welcome back! Please enter your details below.
  </Fragment>

  <form method="POST" class="space-y-4">
    {error && (
      <Alert variant="destructive">
        <AlertDescription>{error}</AlertDescription>
      </Alert>
    )}

    <div class="space-y-2">
      <Label htmlFor="email">Email</Label>
      <Input
        id="email"
        name="email"
        type="email"
        placeholder="your@email.com"
        required
      />
    </div>

    <div class="space-y-2">
      <div class="flex items-center justify-between">
        <Label htmlFor="password">Password</Label>
        <a
          href="/forgot-password"
          class="text-sm font-medium text-primary hover:text-primary/90"
        >
          Forgot password?
        </a>
      </div>
      <Input
        id="password"
        name="password"
        type="password"
        required
      />
    </div>

    <Button
      type="submit"
      className="w-full"
    >
      Sign in
    </Button>

    <div class="text-center text-sm mt-4">
      <span class="text-muted-foreground">Don't have an account?</span>{" "}
      <a
        href="/register"
        class="font-medium text-primary hover:text-primary/90"
      >
        Sign up
      </a>
    </div>
  </form>
</AuthLayout>

export const prerender = false;